<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    </ul>
  <% end %>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/left', user: current_user, book: @book %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th><p>Title</p></th>
            <th><p>Opinion</p></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <th><span>
                <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
              </span></th>
              <th><span><%= link_to book.title, book_path(book) %></span></th>
              <th><span><%= book.body %></span></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>