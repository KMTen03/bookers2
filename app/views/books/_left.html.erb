<h2>User info</h2>
<h3><%= image_tag user.get_profile_image(100,100) %></h3>
<table class="table">
  <tbody>
    <tr>
      <th><h6>name</h6></th>
      <th><h6><%= user.name %></h6></th>
    </tr>
    <tr>
      <th><h6>introduction</h6></th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

  <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  
  <%= form_with model: book do |f| %>
  <th><h2>New book</h2></th>
  <th><h5>Title</h5></th>
    <%= f.text_field :title, size: "25" %></br>
  <th><h5>Opinion</h5></th>
    <%= f.text_area :body, size: "30" %></br>
    <%= f.submit 'Create Book' %>
  <% end %>