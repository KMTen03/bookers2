<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/left', user: current_user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <% @users.each do |user| %>
          <table class="table">
          <thead>
            <tr>
              <th><p>image</p></th>
              <th><p>name</p></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th><span><%= image_tag current_user.get_profile_image(100,100) %></span></th>
              <th><span><%= user.name %></span></th>
              <th><%= link_to "Show", user_path(user.id) %></th>
            </tr>
          </tbody>
          </table>
        <% end %>
        <%= paginate @users %>
    </div>
  </div>
</div>