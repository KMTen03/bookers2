<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/left', user: current_user, book: @book %>
    </div>
  </div>
  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">
      <% @users.each do |user| %>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th><span><%= image_tag current_user.get_profile_image(100,100) %></span></th>
          <th><span><%= user.name %></span></th>
          <th><%= link_to "Show", user_path(user.id) %></th>
        </tr>
      <% end %>
      <%= paginate @users %>
      </tbody>
    </table>
  </div>
</div>